<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:top_margin="10fp"
    ohos:bottom_margin="10fp"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:mydialog_title"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="$color:brown"
        ohos:layout_alignment="horizontal_center"
        ohos:text_size="25fp"/>


    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="18vp"
        ohos:alignment="horizontal_center">

        <Text
            ohos:id="$+id:mydialog_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="18fp"
            ohos:text_color="$color:brown"
            ohos:text="用时：00:00">
        </Text>




    </DirectionalLayout>




    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="18vp"
        ohos:alignment="horizontal_center">

        <Button
            ohos:id="$+id:mydialog_btn1"
            ohos:text_size="20fp"
            ohos:height="match_content"
            ohos:padding="5vp"
            ohos:background_element="$graphic:bg_btn"
            ohos:width="95fp"
            >
        </Button>

        <Button
            ohos:id="$+id:mydialog_btn2"
            ohos:padding="5vp"
            ohos:text_size="20fp"
            ohos:left_margin="10fp"
            ohos:height="match_content"
            ohos:background_element="$graphic:bg_btn"
            ohos:width="95fp"
            >
        </Button>

    </DirectionalLayout>





</DirectionalLayout>