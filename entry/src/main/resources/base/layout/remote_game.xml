<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$media:bg"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text

            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="房间号："
            ohos:text_size="20vp"
            />
        <Text
            ohos:id="$+id:room_id_text"
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="正在连接中..."
            ohos:text_size="20vp"
            />

    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text

            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="你的对手："
            ohos:text_size="20vp"
            />
        <Text
            ohos:id="$+id:remote_opponent_now_go"
            ohos:height="40vp"
            ohos:text="未加入"
            ohos:width="match_content"
            ohos:text_size="20vp"
            />

    </DirectionalLayout>
    <DirectionalLayout
        ohos:id="$+id:remote_board_layout"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="vertical"
        ohos:alignment="center">
    </DirectionalLayout>



    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text

            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="你："
            ohos:text_size="20vp"
            />
        <Text
            ohos:id="$+id:remote_now_go"
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="未准备"
            ohos:text_size="20vp"
            />

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text
            ohos:id="$+id:remote_status"
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="游戏未开始"
            ohos:text_size="20vp"
            />

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Button
            ohos:id="$+id:remote_game_btn"
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:padding="5vp"
            ohos:background_element="$graphic:bg_btn"
            ohos:text="准备"
            ohos:text_size="20vp"
            />
        <Button
            ohos:id="$+id:remote_undo"
            ohos:height="match_content"
            ohos:start_margin="20vp"
            ohos:width="100vp"
            ohos:background_element="$graphic:bg_btn"
            ohos:padding="5vp"
            ohos:text="悔棋"
            ohos:text_size="20vp"
            />
        <Button
            ohos:id="$+id:remote_ret_btn"
            ohos:start_margin="20vp"
            ohos:height="40vp"
            ohos:width="100vp"
            ohos:padding="5vp"
            ohos:background_element="$graphic:bg_btn"
            ohos:text="返回"
            ohos:text_size="20vp"
            />

    </DirectionalLayout>

</DirectionalLayout>